<section>
    <div><%= "Nenhum imóvel disponível" if not @properties.any?%></div>

    <% @properties.each do |p| %>
        <div><%= link_to p.title, property_path(p.id) %></div>
        <div><%= p.description %></div>
        <div>Quartos: <%= p.rooms %></div>
        <div>=================================================================</div>
    <% end %>
</section>