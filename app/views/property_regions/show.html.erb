<h1> Imóveis em <%= @property_region.name%></h1>

<div><%= "Nenhum imóvel disponível" if not @property_region.properties.any?%></div>

<% @property_region.properties.each do |p| %>
    <div><%= link_to p.title, property_path(p.id) %></div>
    <div><%= p.description %></div>
    <div>Quartos: <%= p.rooms %></div>
    <div>=================================================================</div>
<% end %>

