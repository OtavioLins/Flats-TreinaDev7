<h1><%= @property.title %></h1>

<h2><%= @property.description %></h2>
<div>
<dl>
  <dt>Quartos:</dt>
  <dd><%= @property.rooms %></dd>

  <dt>Banheiros:</dt>
  <dd><%= @property.bathrooms %></dd>
  
  <dt>Aceita pets:</dt>
  <dd><%= if @property.pets then "Sim" else "Não" end %></dd>

  <dt>Estacionamento:</dt>
  <dd><%= if @property.parking_slot then "Sim" else "Não" end %></dt>

  <dt>Preço da diária:</dt>
  <dd><%= number_to_currency(@property.daily_rate, unit: 'R$', separator: ',', format: "%u %n") %></dd>
</dl>
</div>

<%= link_to('Voltar', root_path)%>