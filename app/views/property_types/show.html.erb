<h1> Imóveis do tipo <%= @property_type.name%></h1>

<div><%= "Nenhum imóvel disponível" if not @property_type.properties.any?%></div>

<% @property_type.properties.each do |p| %>
    <div><%= link_to p.title, property_path(p.id) %></div>
    <div><%= p.description %></div>
    <div>Quartos: <%= p.rooms %></div>
    <div>=================================================================</div>
<% end %>