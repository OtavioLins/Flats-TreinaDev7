<h1> Flats </h1>
<h3> Boas vindas ao sistema de locação de apartamentos </h3>

<nav>
    <%= link_to("Cadastre seu imóvel aqui", new_property_path)%>
</nav>

<div>

<%= "Nenhum imóvel disponível" if not @properties.any?%>

<% @properties.each do |p| %>
    <%= link_to p.title, property_path(p.id) %>
    <%= p.description %>
    <%= "Quartos: #{p.rooms}" %>
<% end %>
</div>

